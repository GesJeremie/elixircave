<div class="header__container">
  <div class="container">
    <div class="header__title">We hunt for Elixir Jobs ... so you don't have to!</div>
  </div>
</div>

<div class="container">
  <div class="section__container">
    <div class="section__email">
      <form {{action "subscribe" on="submit"}}>
        <div class="gr-4">
          <div class="section__description">Get a weekly email of all new jobs</div>
        </div>
        <div class="gr-2">
          {{input type="text" value=email placeholder="Email"}}
        </div>
        <div class="gr-2">
          {{input type="text" value=firstname placeholder="First Name"}}
        </div>
        <div class="gr-2">
          {{input type="text" value=lastname placeholder="Last Name"}}
        </div>
        <div class="gr-2">
          <button type="submit" class="{{unless isFormValid "--disabled"}}" disabled= {{disabledButton}}>{{ subscribeText }}</button>
        </div>
        <div class="clear"></div>
      </form>

    </div>
    
    <h3 class="section__title">Jobs Hunted</h3>

  </div>
</div>
<div class="container">

  {{#each classified as |post|}}
    <div class="post__container" {{action "toggleShow" post on="click"}}>

      <div class="gr-6">
        <div class="post__title">{{ post.title }}</div>
        <div class="post__company">{{if-empty post.company }}</div>
      </div>
      <div class="gr-4">
        <div class="post__location"><i class="icon-location"></i> {{if-empty post.location }}</div>
      </div>
      <div class="gr-2">
        <div class="post__date"><i class="icon-clock"></i> {{humanize-date post.date }}</div>

      </div>
      <div class="clear"></div>

      {{#if post.visible}}
        {{#if post.logo}}
          <div class="post__logo"><img src="{{ post.logo }}" /></div>
        {{/if}}
        <div class="post__content">
          {{{markdown-decode post.content}}}
        </div>
      {{/if}}
    </div>

    {{#if post.visible}}
      <div class="post__apply">
        <a {{action "apply" post on="click" }} href="{{ post.apply }}" target="_blank">Apply for this job</a>
      </div>
    {{/if}}
  {{/each}}

</div>

<div class="+spacer-large"></div>

<div class="footer__sword"><img src="/assets/images/elixir.png" /></div>
